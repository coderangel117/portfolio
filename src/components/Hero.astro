---
import {ArrowDown, Download} from "@lucide/astro";
---
<section id="hero" class="min-h-screen flex items-center pt-16 md:pt-0 relative overflow-hidden">

    <div class="absolute inset-0 bg-gradient-to-br from-[#0c56e9]/10 via-[#fff] to-[#9311d4]/10 -z-10"/>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(120,119,198,0.15),transparent_50%)] -z-10"/>
    <nav class="fixed top-0 left-0 right-0 z-50 bg-white">
        <div class="max-w-6xl mx-auto px-4 md:px-6 py-4">

            <input type="checkbox" id="menu-toggle" class="hidden peer"/>

            <div class="flex items-center justify-between">

                <div class="text-lg font-semibold">
                    Portfolio
                </div>

                <label for="menu-toggle" class="md:hidden cursor-pointer text-2xl">
                    ☰
                </label>

                <div class="hidden md:flex gap-6 text-sm">
                    <a href="#hero">Accueil</a>
                    <a href="#cursus">Parcours</a>
                    <a href="#project">Réalisations</a>
                    <a href="#stack">Technologies</a>
                    <a href="#contact">Contact</a>
                </div>
            </div>

            <div id="mobile-menu" class="hidden peer-checked:flex flex-col gap-4 mt-4 md:hidden">
                <a href="#hero">Accueil</a>
                <a href="#cursus">Parcours</a>
                <a href="#project">Réalisations</a>
                <a href="#stack">Technologies</a>
                <a href="#contact">Contact</a>
            </div>

        </div>
    </nav>


    <div class="max-w-6xl mx-auto px-4 md:px-6 py-12 md:py-24 w-full">
        <div class="flex flex-col md:flex-row items-center md:items-center gap-8 md:gap-24">
            <div class="flex-1 space-y-6 text-center md:text-left">
                <div class="space-y-2">
                    <div class="inline-block px-4 py-2 rounded-full bg-[#0c56e9]/10 border border-[#0c56e9]/20 text-[#0c56e9] text-sm font-medium mb-4">
                        Disponible pour de nouveaux projets
                    </div>
                    <h1
                            class="text-4xl sm:text-5xl md:text-7xl font-bold tracking-tight bg-gradient-to-r
                        from-[#171717] via-[#0c56e9] to-[#9311d4] bg-clip-text text-transparent">
                        Gabriel PERINO
                    </h1>
                </div>
                <p class="text-xl sm:text-2xl md:text-3xl font-semibold text-[#171717]">
                    Développeur Backend
                </p>
                <p class="text-base md:text-lg text-[#595e69] leading-relaxed max-w-xl mx-auto md:mx-0">
                    Curieux et passionné par le développement.Stack principale : PHP, TypeScript, MariaDB, Python,
                    VueJS.
                </p>

                <div class="flex flex-wrap gap-4 justify-center md:justify-start pt-4">
                    <a href="#contact"
                       class="px-6 py-3 bg-[#0c56e9] text-[#0c56e9]-[#171717] rounded-md font-medium hover-elevate active-elevate-2 transition-all"
                    > Me contacter </a>
                    <a
                            href="#project"
                            class="px-6 py-3 border border-border rounded-md font-medium hover-elevate active-elevate-2
                            transition-all"
                    > Voir mes projets </a>
                    <a
                            href="/cv.pdf"
                            download
                            class="px-6 py-3 border border-[#0c56e9]/20 rounded-md font-medium hover-elevate
                            active-elevate-2 transition-all flex items-center gap-2"
                    >
                        <Download class="w-4 h-4"
                        />
                        Télécharger mon CV </a>
                </div>
            </div>

            <div class="flex-shrink-0 relative">
                <div class="absolute -inset-4 bg-gradient-to-r from-[#0c56e9]/30 to-[#9311d4]/30 rounded-lg blur-2xl opacity-50"/>
                <div class="relative w-40 h-40 sm:w-48 sm:h-48 md:w-64 md:h-64 rounded-lg overflow-hidden border-2 border-[#0c56e9]/30 shadow-2xl">
                    <img
                            src="images/profile-picture.jpg"
                            alt="Profile"
                            class="w-full h-full object-cover"
                    />
                </div>
            </div>
        </div>

        <div class="mt-16 md:mt-24 flex justify-center">
            <div class="flex flex-col items-center gap-3 text-[#595e69] animate-bounce">
                <span class="text-sm font-medium">
                    Découvrir mon parcours
                </span>
                <ArrowDown class="w-5 h-5"/>
            </div>
        </div>
    </div>
</section>

<script>
    const nav = document.getElementById('nav');
    document.addEventListener('scroll', function () {
        console.log(nav);
        console.log(window.scrollY);
        if (window.scrollY > 15) {
            nav?.classList.add('bg-white/95');
            nav?.classList.add('backdrop-blur');
            nav?.classList.add('w-full');
        } else {
            nav?.classList.remove('bg-white/95');
            nav?.classList.remove('backdrop-blur');
        }
    })


    const menuToggle = document.getElementById("menu-toggle");
    const mobileLinks = document.querySelectorAll("#mobile-menu a");

    mobileLinks.forEach(link => {
        link.addEventListener("click", () => {
            menuToggle.checked = false;
        });
    });
</script>